<!DOCTYPE html>
<html>
  <head>
    <title>Airpockets</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://api.mapbox.com/mapbox-gl-js/v0.44.0/mapbox-gl.js' %>
    <%= stylesheet_link_tag    'https://api.mapbox.com/mapbox-gl-js/v0.44.0/mapbox-gl.css' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <%= link_to 'Logout', '/signout' %>
      <% else %>
        <%= link_to 'Twitter Login', '/auth/twitter' %>
        <%= link_to 'Facebook Login', '/auth/facebook' %>
        <%= link_to 'Salesforce Login', '/auth/salesforce' %>
      <% end %>
    </header>
    <% if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice]%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
